{% extends 'base.html.twig' %}

{% block content %}
    {% if orders %}
    <table>
        <thead>
        <tr>
            <th style="width: 50px">Order</th>
            <th style="width: 80px">Car</th>
            <th style="width: 80px">Status</th>
            <th>Options</th>
        </tr>
        </thead>
        <tbody>
            {% for order in orders %}
                <tr>
                    <td style="text-align: right">{{ order.id }}
                    </td>
                    <td>
                        {{ order.car.licensePlate }}
                    </td>
                    <td>
                        {% if order.completed %}
                            Completed
                        {% else %}
                            In progress
                        {% endif %}
                    </td>
                    <td>

                        <a href="{{ path('order') }}/{{ order.id }} " class = modern>Details</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
        <p>No Orders</p>
    {% endif %}

    <a href="{{ path('order_new') }}" class = modern>Create new order</a>
{% endblock %}
